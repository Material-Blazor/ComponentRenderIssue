
@foreach (var item in ItemArray)
{
    <div @ref="@FormReference" class="mdc-form-field">
        <div class="mdc-touch-target-wrapper">
            <div @ref="@ElementReference">

                <input @bind="@item.IsSelected"
                       type="checkbox"
                       class="mdc-checkbox__native-control"
                       id="@item.SelectedValue" />
                <div class="mdc-checkbox__background">
                    <svg class="mdc-checkbox__checkmark"
                         viewBox="0 0 24 24">
                        <path class="mdc-checkbox__checkmark-path"
                              fill="none"
                              d="M1.73,12.91 8.1,19.28 22.79,4.59" />
                    </svg>
                    <div class="mdc-checkbox__mixedmark"></div>
                </div>
                <div class="mdc-checkbox__ripple"></div>
            </div>
        </div>
        <label for="@item.SelectedValue">@item.Label</label>
    </div>
    <br />
}

@code {
    public class MultiSelectListElement
    {
        public string SelectedValue { get; set; }
        public string Label { get; set; }
        public bool IsSelected { get; set; }
        public bool? Disabled { get; set; }
    }

    [Parameter] public MultiSelectListElement[] ItemArray { get; set; }

    private ElementReference ElementReference { get; set; }

    private ElementReference FormReference { get; set; }
}
